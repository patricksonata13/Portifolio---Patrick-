    <!-- Carregar sistemas extras sÃ³ se existirem -->
    <script>
        // Carregar sistemas adicionais apenas se os arquivos existirem
        function carregarScript(src) {
            const script = document.createElement('script');
            script.src = src;
            script.onerror = () => console.log(`Sistema ${src} nÃ£o encontrado`);
            document.head.appendChild(script);
        }

        // Tentar carregar sistemas extras (nÃ£o crÃ­ticos)
        carregarScript('/cdd/assets/js/sistemas/combate.js');
        carregarScript('/cdd/assets/js/sistemas/crafting.js');
        carregarScript('/cdd/assets/js/sistemas/aliados.js');
        carregarScript('/cdd/assets/js/sistemas/clima.js');
        carregarScript('/cdd/assets/js/sistemas/dialogo.js');
    </script>

    <script>
        // SISTEMA DE RPG (SEU ORIGINAL, sÃ³ adicionei atualizaÃ§Ã£o de UI)
        function abrirModulo(modulo) {
            const consoleEl = document.getElementById('consoleLog');
            consoleEl.innerHTML = `> Acessando mÃ³dulo: ${modulo}...<br>`;
            
            setTimeout(() => {
                if (modulo === 'perfil') {
                    window.location.href = '/cdd/perfil.html';
                } else {
                    window.location.href = `/cdd/${modulo}/`;
                }
            }, 500);
        }

        // Atualizar interface com dados do jogador
        function atualizarInterface() {
            if (window.rpg) {
                document.getElementById('nivel-status').textContent = rpg.jogador.nivel || 2;
                document.getElementById('xp-total').textContent = `${rpg.jogador.xp || 600}/${rpg.jogador.xpProximoNivel || 1800}`;
                document.getElementById('memorias-total').textContent = `${rpg.jogador.memorias || 23}/50`;
                
                const percent = ((rpg.jogador.xp || 600) / (rpg.jogador.xpProximoNivel || 1800)) * 100;
                document.getElementById('barra-xp').style.width = percent + '%';
            }
        }

        // Atualizar a cada segundo
        setInterval(atualizarInterface, 1000);
        atualizarInterface();

        // Auto-save
        setInterval(() => {
            if (window.rpg) {
                window.rpg.salvarJogo();
            }
        }, 30000);
    </script>
