    <!-- CONTE√öDO DAS ABAS -->
    <div class="content">
        <!-- SINOPSE -->
        <div id="sinopse" class="tab-pane active">
            <h2 style="margin-bottom: 20px;">‚ñ∑ SINOPSE</h2>
            <textarea id="sinopseTexto" style="width:100%; height:300px; padding:20px; font-family:'Courier New'; border:1px solid var(--border);" placeholder="Escreva aqui a sinopse da sua hist√≥ria..."></textarea>
        </div>

        <!-- ARGUMENTO -->
        <div id="argumento" class="tab-pane">
            <h2 style="margin-bottom: 20px;">‚ñ∑ ARGUMENTO</h2>
            <textarea id="argumentoTexto" style="width:100%; height:500px; padding:20px; font-family:'Courier New'; border:1px solid var(--border);" placeholder="Desenvolvimento completo da trama..."></textarea>
        </div>

        <!-- ESCALETA -->
        <div id="escaleta" class="tab-pane">
