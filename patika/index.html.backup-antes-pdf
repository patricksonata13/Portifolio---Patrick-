    <script>
        // ========================================
        // GERENCIAMENTO DE ABAS
        // ========================================
        function mudarAba(abaId) {
            // Remover classe active de todas as abas
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-pane').forEach(pane => {
                pane.classList.remove('active');
            });
            
            // Ativar aba clicada
            event.target.closest('.tab').classList.add('active');
            document.getElementById(abaId).classList.add('active');
            
            // Salvar √∫ltima aba
            localStorage.setItem('patika_ultima_aba', abaId);
        }

        // ========================================
        // ESCALETA
        // ========================================
        let cenas = [];

        function adicionarCena() {
            const cena = {
                id: Date.now(),
                numero: cenas.length + 1,
                local: '',
                descricao: ''
            };
            cenas.push(cena);
            renderizarEscaleta();
        }

        function renderizarEscaleta() {
            const lista = document.getElementById('escaletaLista');
            lista.innerHTML = cenas.map(cena => `
                <div class="escaleta-item" data-id="${cena.id}">
                    <div class="escaleta-numero">${cena.numero}.</div>
                    <div class="escaleta-cena">
                        <input type="text" placeholder="LOCAL - DIA/NOITE" value="${cena.local}" onchange="atualizarCena(${cena.id}, 'local', this.value)">
                        <textarea placeholder="Descri√ß√£o da cena..." onchange="atualizarCena(${cena.id}, 'descricao', this.value)">${cena.descricao}</textarea>
                    </div>
                </div>
            `).join('');
        }

        function atualizarCena(id, campo, valor) {
            const cena = cenas.find(c => c.id === id);
            if (cena) {
                cena[campo] = valor;
                salvarProjeto();
            }
        }

        // ========================================
        // PERSONAGENS
        // ========================================
        let personagens = [];

        function adicionarPersonagem() {
            const personagem = {
                id: Date.now(),
                nome: '',
                idade: '',
                descricao: '',
                objetivo: ''
            };
            personagens.push(personagem);
            renderizarPersonagens();
        }

        function renderizarPersonagens() {
            const lista = document.getElementById('personagensLista');
            lista.innerHTML = personagens.map(p => `
                <div class="personagem-card" data-id="${p.id}">
                    <div class="personagem-foto">
                        <span class="icon icon-sun icon-lg"></span>
                    </div>
                    <div class="personagem-info">
                        <input type="text" placeholder="Nome" value="${p.nome}" onchange="atualizarPersonagem(${p.id}, 'nome', this.value)">
                        <input type="text" placeholder="Idade" value="${p.idade}" onchange="atualizarPersonagem(${p.id}, 'idade', this.value)">
                        <textarea placeholder="Descri√ß√£o f√≠sica e psicol√≥gica..." onchange="atualizarPersonagem(${p.id}, 'descricao', this.value)">${p.descricao}</textarea>
                        <textarea placeholder="Objetivo / Jornada..." onchange="atualizarPersonagem(${p.id}, 'objetivo', this.value)">${p.objetivo}</textarea>
                    </div>
                </div>
            `).join('');
        }

        function atualizarPersonagem(id, campo, valor) {
            const p = personagens.find(p => p.id === id);
            if (p) {
                p[campo] = valor;
                salvarProjeto();
            }
        }

        // ========================================
        // PROJETO E SALVAMENTO
        // ========================================
        let projetoAtual = {
            id: Date.now(),
            nome: 'projeto_sem_t√≠tulo',
            sinopse: '',
            argumento: '',
            cenas: [],
            personagens: []
        };

        function carregarProjeto() {
            const salvo = localStorage.getItem('patika_projeto_atual');
            if (salvo) {
                projetoAtual = JSON.parse(salvo);
                document.getElementById('sinopseTexto').value = projetoAtual.sinopse || '';
                document.getElementById('argumentoTexto').value = projetoAtual.argumento || '';
                cenas = projetoAtual.cenas || [];
                personagens = projetoAtual.personagens || [];
                renderizarEscaleta();
                renderizarPersonagens();
            }
            atualizarInterface();
        }

        function salvarProjeto() {
            projetoAtual.sinopse = document.getElementById('sinopseTexto').value;
            projetoAtual.argumento = document.getElementById('argumentoTexto').value;
            projetoAtual.cenas = cenas;
            projetoAtual.personagens = personagens;
            
            localStorage.setItem('patika_projeto_atual', JSON.stringify(projetoAtual));
            document.getElementById('statusSalvo').innerHTML = '‚úì salvo';
            document.getElementById('ultimoSave').innerHTML = 'agora';
            
            atualizarContador();
        }

        function novoProjeto() {
            if (confirm('Criar novo projeto? O atual ser√° salvo.')) {
                salvarProjeto();
                projetoAtual = {
                    id: Date.now(),
                    nome: 'projeto_sem_t√≠tulo',
                    sinopse: '',
                    argumento: '',
                    cenas: [],
                    personagens: []
                };
                document.getElementById('sinopseTexto').value = '';
                document.getElementById('argumentoTexto').value = '';
                cenas = [];
                personagens = [];
                renderizarEscaleta();
                renderizarPersonagens();
                salvarProjeto();
            }
        }

        function atualizarContador() {
            const texto = projetoAtual.sinopse + ' ' + projetoAtual.argumento;
            const palavras = texto.trim().split(/\s+/).filter(p => p.length > 0).length;
            document.getElementById('contadorPalavras').innerHTML = palavras;
        }

        function atualizarInterface() {
            document.getElementById('projetoAtual').innerHTML = `üìÅ ${projetoAtual.nome}`;
            document.getElementById('projetoStatus').innerHTML = projetoAtual.nome;
        }

        // ========================================
        // AUTO-SAVE
        // ========================================
        let timeoutAutoSave;
        document.querySelectorAll('textarea, input').forEach(el => {
            el.addEventListener('input', () => {
                document.getElementById('statusSalvo').innerHTML = 'editando...';
                clearTimeout(timeoutAutoSave);
                timeoutAutoSave = setTimeout(salvarProjeto, 2000);
            });
        });

        // ========================================
        // ATALHOS DE TECLADO
        // ========================================
        document.addEventListener('keydown', (e) => {
            if (e.metaKey || e.ctrlKey) {
                switch(e.key) {
                    case 's':
                        e.preventDefault();
                        salvarProjeto();
                        break;
                    case 'n':
                        e.preventDefault();
                        novoProjeto();
                        break;
                    case 'p':
                        e.preventDefault();
                        alert('Exportar PDF (funcionalidade em breve)');
                        break;
                    case '1':
                        e.preventDefault();
                        mudarAba('sinopse');
                        break;
                    case '2':
                        e.preventDefault();
                        mudarAba('argumento');
                        break;
                    case '3':
                        e.preventDefault();
                        mudarAba('escaleta');
                        break;
                    case '4':
                        e.preventDefault();
                        mudarAba('roteiro');
                        break;
                    case '5':
                        e.preventDefault();
                        mudarAba('personagens');
                        break;
                    case '6':
                        e.preventDefault();
                        mudarAba('atalhos');
                        break;
                }
            }
        });

        // ========================================
        // INICIALIZA√á√ÉO
        // ========================================
        document.addEventListener('DOMContentLoaded', () => {
            carregarProjeto();
            
            // Restaurar √∫ltima aba
            const ultimaAba = localStorage.getItem('patika_ultima_aba');
            if (ultimaAba) {
                mudarAba(ultimaAba);
            }
        });

        // Salvar antes de fechar
        window.addEventListener('beforeunload', salvarProjeto);

        // Auto-save peri√≥dico
        setInterval(salvarProjeto, 30000);
    </script>
</body>
</html>
