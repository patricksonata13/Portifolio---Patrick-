    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const imageUrlInput = document.getElementById('imageUrl');
            const testButton = document.getElementById('testButton');
            const previewImage = document.getElementById('previewImage');
            const placeholderText = document.getElementById('placeholderText');
            const statusMessage = document.getElementById('statusMessage');
            
            // URLs de exemplo baseadas no seu repositório
            const exampleUrls = [
                'https://raw.githubusercontent.com/patricksonata13/Portifolio---Patrick-/main/images/works/pablo_luisao.jpg',
                'https://raw.githubusercontent.com/patricksonata13/Portifolio---Patrick-/main/images/works/zorra.png',
                'https://raw.githubusercontent.com/patricksonata13/Portifolio---Patrick-/main/images/works/pelada.jpg',
                'https://raw.githubusercontent.com/patricksonata13/Portifolio---Patrick-/main/images/works/humor_negro.png'
            ];
            
            // Preencher com URL de exemplo
            imageUrlInput.value = exampleUrls[0];
            
            testButton.addEventListener('click', function() {
                const imageUrl = imageUrlInput.value.trim();
                
                if (!imageUrl) {
                    showStatus('Por favor, insira uma URL de imagem', 'error');
                    return;
                }
                
                // Mostrar loading
                placeholderText.textContent = 'Carregando imagem...';
                previewImage.style.display = 'none';
                statusMessage.style.display = 'none';
                
                // Testar a imagem
                testImage(imageUrl);
            });
            
            function testImage(url) {
                const img = new Image();
                
                img.onload = function() {
                    previewImage.src = url;
                    previewImage.style.display = 'block';
                    placeholderText.textContent = '';
                    showStatus('✅ Imagem carregada com sucesso!', 'success');
                };
                
                img.onerror = function() {
                    placeholderText.textContent = 'Falha ao carregar a imagem';
                    previewImage.style.display = 'none';
                    showStatus('❌ Erro: Não foi possível carregar a imagem. Verifique o URL e tente novamente.', 'error');
                };
                
                img.src = url;
            }
            
            function showStatus(message, type) {
                statusMessage.textContent = message;
                statusMessage.className = 'status ' + type;
                statusMessage.style.display = 'block';
            }
            
            // Adicionar evento de clique nas imagens da galeria
            const galleryItems = document.querySelectorAll('.image-item');
            galleryItems.forEach((item, index) => {
                item.addEventListener('click', function() {
                    imageUrlInput.value = exampleUrls[index];
                    testButton.click();
                });
            });
        });
    </script>
</body>
