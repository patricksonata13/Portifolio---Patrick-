    <script>
        // Configura√ß√£o do upload de imagens
        const dropArea = document.getElementById('dropArea');
        const fileInput = document.getElementById('fileInput');
        const previewContainer = document.getElementById('previewContainer');
        
        // Prevenir comportamento padr√£o para drag and drop
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        // Destacar √°rea de drop quando um arquivo estiver sobre ela
        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, highlight, false);
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, unhighlight, false);
        });
        
        function highlight() {
            dropArea.style.background = '#e6eeff';
        }
        
        function unhighlight() {
            dropArea.style.background = '#f8f9ff';
        }
        
        // Manipular arquivos soltos
        dropArea.addEventListener('drop', handleDrop, false);
        
        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            handleFiles(files);
        }
        
        // Manipular sele√ß√£o de arquivos via bot√£o
        fileInput.addEventListener('change', function() {
            handleFiles(this.files);
        });
        
        function handleFiles(files) {
            previewContainer.innerHTML = '';
            
            if (files.length === 0) return;
            
            const info = document.createElement('p');
            info.textContent = `${files.length} imagem(ns) selecionada(s):`;
            info.style.marginBottom = '15px';
            info.style.fontWeight = 'bold';
            previewContainer.appendChild(info);
            
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                
                if (!file.type.match('image.*')) {
                    continue;
                }
                
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    const preview = document.createElement('div');
                    preview.style.display = 'inline-block';
                    preview.style.margin = '10px';
                    preview.style.position = 'relative';
                    
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.style.height = '100px';
                    img.style.borderRadius = '5px';
                    img.style.boxShadow = '0 2px 5px rgba(0,0,0,0.2)';
                    
                    const removeBtn = document.createElement('button');
                    removeBtn.textContent = '√ó';
                    removeBtn.style.position = 'absolute';
                    removeBtn.style.top = '-5px';
                    removeBtn.style.right = '-5px';
                    removeBtn.style.background = 'red';
                    removeBtn.style.color = 'white';
                    removeBtn.style.border = 'none';
                    removeBtn.style.borderRadius = '50%';
                    removeBtn.style.width = '20px';
                    removeBtn.style.height = '20px';
                    removeBtn.style.cursor = 'pointer';
                    removeBtn.onclick = function() {
                        preview.remove();
                    };
                    
                    preview.appendChild(img);
                    preview.appendChild(removeBtn);
                    previewContainer.appendChild(preview);
                }
                
                reader.readAsDataURL(file);
            }
            
            // Simular upload (em um caso real, aqui voc√™ faria uma requisi√ß√£o para o servidor)
            setTimeout(() => {
                alert('Imagens carregadas com sucesso! Em uma aplica√ß√£o real, elas seriam enviadas para o servidor.');
            }, 1000);
        }
    </script>
