    <script>
        // ========================================
        // FUNﾃﾃ髭S SIMPLES - 100% FUNCIONAIS
        // ========================================
        
        function mostrarSobre() {
            document.getElementById('sobre-section').style.display = 
'block';
            document.getElementById('perfil-section').style.display = 
'none';
            document.getElementById('trabalho-painel').style.display = 
'none';
        }
        
        function mostrarPerfil() {
            document.getElementById('perfil-section').style.display = 
'block';
            document.getElementById('sobre-section').style.display = 
'none';
            document.getElementById('trabalho-painel').style.display = 
'none';
        }
        
        function abrirTrabalho() {
            document.getElementById('trabalho-painel').style.display = 
'block';
            document.getElementById('sobre-section').style.display = 
'none';
            document.getElementById('perfil-section').style.display = 
'none';
        }
        
        function fecharTrabalho() {
            document.getElementById('trabalho-painel').style.display = 
'none';
        }
    </script>
