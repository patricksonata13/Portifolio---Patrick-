        function mostrarSobre() {
            document.getElementById('secao-sobre').style.display = 'block';
            document.getElementById('secao-perfil').style.display = 'none';
            document.getElementById('painel-trabalho').classList.remove('active');
            document.getElementById('secao-sobre').scrollIntoView({ behavior: 'smooth' });
        }
        
        // ========================================
        // ABA 5: PERFIL - MINHA CARREIRA
        // ========================================
        function mostrarPerfil() {
            document.getElementById('secao-perfil').style.display = 'block';
            document.getElementById('secao-sobre').style.display = 'none';
            document.getElementById('painel-trabalho').classList.remove('active');
            document.getElementById('secao-perfil').scrollIntoView({ behavior: 'smooth' });
        }
        
        // ========================================
        // ABA 6: TRABALHO - PORTFÓLIO
        // ========================================
        function mostrarTrabalho() {
            document.getElementById('painel-trabalho').classList.add('active');
            document.getElementById('secao-sobre').style.display = 'none';
            document.getElementById('secao-perfil').style.display = 'none';
            document.getElementById('titulo-painel').innerText = 'TRABALHO';
            
            const conteudo = document.getElementById('conteudo-painel');
            conteudo.innerHTML = `
                <div class="submenu-buttons">
                    <button onclick="mostrarPortfolio()" class="submenu-btn">PORTFÓLIO</button>
                </div>
                <p style="margin-top: 30px; text-align: center; color: #aaa;">
                    Selecione PORTFÓLIO para ver os projetos realizados.
                </p>
            `;
        }
        
